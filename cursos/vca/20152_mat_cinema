    <script src="/js/app.js?id=5c20d3c13fabd1e0eb29"></script>
        <script>
        $(document).ready(function (){
            $(function() {
                var mainHeader = $("#app");
                $(window).scroll(function() {    
                    var scroll = $(window).scrollTop();
                
                    if (scroll > 500) {
                        $("#scrollTop").show();
                    } else {
                        $("#scrollTop").hide();
                    }
                });
            });
            $("#scrollTop").click(function (){
                $('html, body').animate({
                    scrollTop: $("head").offset().top
                }, 1000);
            });
        });
    </script>
